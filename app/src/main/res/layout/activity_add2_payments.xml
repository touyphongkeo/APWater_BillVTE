<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/view_list"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/round_border">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="#070707"
                android:textStyle="bold"
                android:fontFamily="@font/notosanslaoui_regular"
                android:padding="5dp"
                android:text="ລະຫັດຜູ້ໃຊ້" />

            <EditText
                android:id="@+id/TxtTcode"
                android:layout_below="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:enabled="false"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_twotone_repeat_one_24"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/notosanslaoui_regular"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/txtG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="#070707"
                android:layout_below="@+id/TxtTcode"
                android:textStyle="bold"
                android:fontFamily="@font/notosanslaoui_regular"
                android:padding="5dp"
                android:text="ຊື່ລູກຄ້າ" />


            <EditText
                android:id="@+id/TxtTcodesss"
                android:layout_below="@+id/txtG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:enabled="false"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/notosanslaoui_regular"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />




            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="#070707"
                android:textStyle="bold"
                android:layout_below="@+id/TxtTcodesss"
                android:fontFamily="@font/notosanslaoui_regular"
                android:padding="5dp"
                android:text="ຈຳນວນເງີນທີ່ຕ້ອງຊຳລະdd" />

            <EditText
                android:id="@+id/txtTotal"
                android:layout_below="@+id/txt2"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/notosanslaoui_regular"
                android:drawableRight="@drawable/ic_baseline_check_circle_outline_24"
                android:inputType="text"
                android:enabled="false"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_sarch"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/txt2"
                android:layout_toEndOf="@+id/txtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/notosanslaoui_regular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_baseline_sync_24"
                android:text="ຈ່າຍເຕ້ມ"
                android:background="@drawable/bgbtn"/>

            <Button
                android:id="@+id/btn_sarchs"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/txt2"
                android:layout_toEndOf="@+id/txtTotal"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_baseline_sync_24"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/notosanslaoui_regular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="ປຽນແບບ"
                android:background="@drawable/bgbtns"/>

            <TextView
                android:id="@+id/txt1s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTotal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/notosanslaoui_regular"
                android:padding="5dp"
                android:text="ຈຳນວນເງີນຊຳລະ"
                android:textColor="#070707"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/bbbs"
                android:layout_below="@+id/txt1s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/notosanslaoui_regular"
                android:inputType="number"
                android:drawableRight="@drawable/ic_baseline_payment_24"
                android:padding="16dp"
                android:hint="ກະລຸນາປ້ອນຈຳນວນເງີນທີຊຳລະ"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bbbs"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/notosanslaoui_regular"
                android:padding="5dp"
                android:text="ຈຳນວນເງີນຍອດຍັງ ເຫຼືອ ການຊຳລະ"
                android:textColor="#070707"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/payment"
                android:layout_below="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/notosanslaoui_regular"
                android:inputType="number"
                android:enabled="false"
                android:drawableRight="@drawable/event_available"
                android:padding="16dp"
                android:hint="ຈຳນວນເງີນຍອດຍັງ ເຫຼືອ ການຊຳລະ"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/poverpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/notosanslaoui_regular"
                android:padding="5dp"
                android:text="ຍອດເກີນຊຳລະເງີນ"
                android:textColor="#070707"
                android:textStyle="bold" />
            <EditText
                android:visibility="gone"
                android:id="@+id/overypay"
                android:layout_below="@+id/poverpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/notosanslaoui_regular"
                android:inputType="number"
                android:enabled="false"
                android:drawableRight="@drawable/event_available"
                android:padding="16dp"
                android:hint="ຍອດເກີນ"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overypay"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bgbtnsplash"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:fontFamily="@font/notosanslaoui_regular"
                android:text="ຢືນຍັນການຊຳລະເງີນ"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:padding="16dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_below="@+id/btnprice"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/notosanslaoui_regular"
               />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
</RelativeLayout>